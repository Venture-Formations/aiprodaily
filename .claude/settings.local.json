{
  "permissions": {
    "allow": [
      "WebFetch(domain:api.github.com)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(npm run type-check:*)",
      "Bash(npx tsc:*)",
      "mcp__vercel__getDeployments",
      "mcp__vercel__getDeploymentEvents",
      "Bash(curl:*)",
      "Bash(npm view:*)",
      "Bash(nul)",
      "Bash(npm show:*)",
      "Bash(npm install:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(npm run:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "vercel",
    "memory"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.bat"
          }
        ]
      }
    ]
  }
}
